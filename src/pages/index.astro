---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Hero Section -->
  <div class="relative h-[50vh] min-h-[400px] w-full">
    <img 
      src="https://images.unsplash.com/photo-1466692476868-aef1dfb1e735?auto=format&q=80"
      alt="Community Garden" 
      class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black bg-opacity-50"></div>
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Community Garden</h1>
        <p class="text-xl text-green-100">Growing together, nurturing community</p>
      </div>
    </div>
  </div>

  <!-- About Section -->
  <div class="bg-white py-16">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-garden-green mb-6">About Our Garden</h2>
      <p class="text-lg text-gray-700 mb-8">
        Welcome to our thriving community garden, where neighbors come together to grow food, share knowledge, and build lasting friendships. Since 2020, we've been cultivating not just plants, but a strong sense of community and environmental stewardship.
      </p>
      <div class="grid grid-cols-3 gap-4 text-center">
        <div>
          <p class="text-3xl font-bold text-garden-green">50+</p>
          <p class="text-gray-600">Active Members</p>
        </div>
        <div>
          <p class="text-3xl font-bold text-garden-green">100</p>
          <p class="text-gray-600">Garden Plots</p>
        </div>
        <div>
          <p class="text-3xl font-bold text-garden-green">12</p>
          <p class="text-gray-600">Monthly Events</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Image Gallery -->
  <div class="bg-gray-50 py-12">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <img 
          src="https://images.unsplash.com/photo-1523348837708-15d4a09cfac2?auto=format&q=80&w=500"
          alt="Garden vegetables" 
          class="w-full h-48 object-cover rounded-lg shadow-md"
        />
        <img 
          src="https://images.unsplash.com/photo-1592150621744-aca64f48394a?auto=format&q=80&w=500"
          alt="Community gathering" 
          class="w-full h-48 object-cover rounded-lg shadow-md"
        />
        <img 
          src="https://images.unsplash.com/photo-1557234195-6c68c8828121?auto=format&q=80&w=500"
          alt="Garden tools" 
          class="w-full h-48 object-cover rounded-lg shadow-md"
        />
        <img 
          src="https://images.unsplash.com/photo-1524247108137-732e0f642303?auto=format&q=80&w=500"
          alt="Fresh produce" 
          class="w-full h-48 object-cover rounded-lg shadow-md"
        />
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="min-h-screen bg-gradient-to-b from-garden-green to-leaf px-4 py-16">
    <div class="max-w-2xl mx-auto">
      <!-- Social Links -->
      <div class="flex justify-center space-x-4 mb-12">
