---
import { Image } from "astro:assets";

const { image, title, blurb, url } = Astro.props;
---

<div
  class="relative flex-1 rounded overflow-hidden shadow-lg bg-white w-full h-full hover:shadow-[0_0_15px_rgba(255,255,255,0.8)] transition-shadow duration-300"
>
  <a href={url} class="block h-full">
    <Image
      class="absolute inset-0 w-full h-full object-cover"
      src={image}
      alt={title}
    />
    <div
      class="relative z-10 px-6 py-4 bg-black bg-opacity-50 text-white h-full flex flex-col justify-start"
    >
      <h2 class="font-bold text-3xl mb-2">{title}</h2>
      <p class="text-lg">{blurb}</p>
    </div>
  </a>
</div>

<style is:global>
  @font-face {
    font-family: "Dear";
    src: url("/fonts/dear/vector.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Zine";
    src: url("/fonts/zine/vector.otf") format("opentype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
</style>

<style>
  h2 {
    font-family: "Dear";
  }
  p {
    font-family: "Zine";
    color: white;
  }
</style>
