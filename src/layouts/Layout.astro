---
const squash = Object.values(
  import.meta.glob("/src/assets/img/veg/vintage-tile-whitesmoke-5.png", {
    eager: true,
  }),
).map((mod) => mod.default)[0];

interface Props {
  title?: string;
}

const { title = "McCarren Park Demonstration Garden" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="The McCarren Park Demonstration Garden is an initiative of North Brooklyn Mutual Aid which grows fresh food for donation to the neighborhood’s free fridges.">

    <meta property="og:type" content="website">
    <meta property="og:url" content="https://mccarren.garden">
    <meta property="og:title" content="McCarren Park Demonstration Garden">
    <meta property="og:description" content="The McCarren Park Demonstration Garden is an initiative of North Brooklyn Mutual Aid which grows fresh food for donation to the neighborhood’s free fridges.">

    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://mccarren.garden">
    <meta property="twitter:title" content="McCarren Park Demonstration Garden">
    <meta property="twitter:description" content="The McCarren Park Demonstration Garden is an initiative of North Brooklyn Mutual Aid which grows fresh food for donation to the neighborhood’s free fridges.">
  </head>
  <body style={`background-image: url(${squash.src}); background-size: 300px;`}>
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Dear";
    src: url("/fonts/dear/vector.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Lora";
    src: url("/fonts/lora/static/Lora-Regular.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

